#include <stdlib.h>
#include "main.h"

/**
 * countWords - helper function to count the number of words in a string
 * @s: string to evaluate
 *
 * Return: number of words
 */
int countWords(char *s)
{
	int flag, charCount, wordCount;

	flag = 0;
	wordCount = 0;

	for (charCount = 0; s[charCount] != '\0'; charCount++)
	{
		if (s[charCount] == ' ')
			flag = 0;
		else if (flag == 0)
		{
			flag = 1;
			wordCount++;
		}
	}

	return wordCount;
}

/**
 * splitString - splits a string into words
 * @str: string to split
 *
 * Return: pointer to an array of strings (Success)
 * or NULL (Error)
 */
char **splitString(char *str)
{
	char **wordArray, *tempStr;
	int i, k = 0, strLength = 0, wordCount, charCount = 0, start, end;

	while (*(str + strLength))
		strLength++;
	wordCount = countWords(str);
	if (wordCount == 0)
		return NULL;

	wordArray = (char **)malloc(sizeof(char *) * (wordCount + 1));
	if (wordArray == NULL)
		return NULL;

	for (i = 0; i <= strLength; i++)
	{
		if (str[i] == ' ' || str[i] == '\0')
		{
			if (charCount)
			{
				end = i;
				tempStr = (char *)malloc(sizeof(char) * (charCount + 1));
				if (tempStr == NULL)
					return NULL;
				while (start < end)
					*tempStr++ = str[start++];
				*tempStr = '\0';
				wordArray[k] = tempStr - charCount;
				k++;
				charCount = 0;
			}
		}
		else if (charCount++ == 0)
			start = i;
	}

	wordArray[k] = NULL;

	return wordArray;
}
